<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/PropImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tvPropTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Five and Half"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/PropImg"
        android:textSize="25sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#045198"
        />

    <TextView
        android:id="@+id/tvPropAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="53E Rue, Montreal"
        app:layout_constraintTop_toBottomOf="@id/tvPropTitle"
        app:layout_constraintStart_toStartOf="@id/tvPropTitle"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="#5A0258"
        android:textStyle="italic"

        />

    <TextView
        android:id="@+id/tvPropPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$1200"
        app:layout_constraintTop_toBottomOf="@id/tvPropAddress"
        app:layout_constraintStart_toStartOf="@id/tvPropTitle"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="#5A0258"
        android:textStyle="italic"

        />

    <ImageView
        android:id="@+id/imMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/more"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>