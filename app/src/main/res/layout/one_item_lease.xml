<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/propImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tvPropTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Five and Half"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/propImg"
        android:textSize="22sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#045198"
        />

    <TextView
        android:id="@+id/tvPropAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="53E Rue, Montreal"
        app:layout_constraintTop_toBottomOf="@id/tvPropTitle"
        app:layout_constraintStart_toStartOf="@id/tvPropTitle"
        android:textSize="16dp"
        android:textColor="#5A0258"
        android:textStyle="italic"

        />

    <TextView
        android:id="@+id/tvTenantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name :"
        app:layout_constraintTop_toBottomOf="@id/tvPropAddress"
        app:layout_constraintStart_toStartOf="@id/tvPropTitle"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="#5A0258"
        android:textStyle="italic"

        />
    <TextView
        android:id="@+id/tvPhoneNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone No. :"
        app:layout_constraintTop_toBottomOf="@id/tvPropAddress"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textSize="16sp"
        android:textColor="#5A0258"
        android:textStyle="italic"

        />

    <TextView
        android:id="@+id/tvEmailId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email ID :"
        app:layout_constraintTop_toBottomOf="@id/tvTenantName"
        app:layout_constraintStart_toStartOf="@id/tvPropTitle"
        android:textSize="16sp"
        android:textColor="#5A0258"
        android:textStyle="italic"

        />



</androidx.constraintlayout.widget.ConstraintLayout>